// .devcontainer/devcontainer.json
{
	"name": "Flutter Codespace",
	"image": "dart-flutter:latest",
	"extensions": [
		"dart-code.dart-code",
		"dart-code.flutter"
	],
	"settings": {
		"dart.sdkPath": "/usr/lib/dart",
		"dart.flutterSdkPath": "/usr/lib/flutter"
	},
	"forwardPorts": [
		3000,
		8000,
		8080,
		8100,
		8200
	],
	"postCreateCommand": "flutter doctor"
}
